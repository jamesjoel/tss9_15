<%- include('header') %>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <a href="/student" class="btn btn-info">Back</a>
            </div>
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-header">
                        <h4>Edit Student</h4>
                    </div>
                    <div class="card-body">
                        <form action="/student/edit/<%= result._id %>" method="post">
                            
                            <div class="form-group">
                                <label>Full Name</label>
                                <input value="<%= result.full_name %>" type="text" name="full_name" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Fee</label>
                                <input type="text" value="<%= result.fee %>" name="fee" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>City</label>
                                <select class="form-control" name="city">
                                    <option>Select</option>
                                    <option <% if(result.city =='Indore'){ %> selected  <% } %>>Indore</option>
                                    <option <% if(result.city =='Mumbai'){ %> selected  <% } %>>Mumbai</option>
                                    <option <% if(result.city =='Pune'){ %> selected  <% } %>>Pune</option>
                        
                        
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <textarea name="address" class="form-control"><%= result.address %></textarea>
                            </div>
                            <div>
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


    

    <%- include('footer') %>